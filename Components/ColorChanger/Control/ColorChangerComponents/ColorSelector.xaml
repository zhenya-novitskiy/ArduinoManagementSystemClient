            </Ellipse>
            <Ellipse Canvas.Left="68" Fill="{Binding FinalColor, FallbackValue=#ffff00}" Canvas.Top="63" Height="20"  Stroke="Transparent" Width="20" >
                <Ellipse.Effect>
                    <BlurEffect Radius="{StaticResource BlurRadius}"></BlurEffect>
