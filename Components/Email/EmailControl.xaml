<UserControl x:Class="ArduinoManagementSystem.Components.Email.EmailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
              Width="900" Height="467">
    <Grid Width="900" Height="467" Background="Black">
        <Border  Width="900" Height="467" Background="Black"></Border>
        <Label Name="EmailIcon" Content="New Email" Visibility="{Binding HasUnreadedEmail}" Foreground="White" Height="28" HorizontalAlignment="Left" Margin="139,134,0,0" VerticalAlignment="Top" />
       
    </Grid>
</UserControl>
