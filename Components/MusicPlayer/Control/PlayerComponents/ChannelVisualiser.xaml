<UserControl x:Class="ArduinoManagementSystem.Components.MusicPlayer.Control.PlayerComponents.ChannelVisualiser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="177" d:DesignWidth="85" Background="Black">
    <Canvas>
        <Image Source="/Components\MusicPlayer\Control\Images\chanellVisualizerBG.png" Height="177" Stretch="Uniform" Canvas.Left="0"></Image>
        <Image  Source="/Components\MusicPlayer\Control\Images\chanellVisualizerDiodes.png" Height="126" Stretch="Uniform" Canvas.Left="18" Canvas.Top="25">
            <Image.Clip>
                <RectangleGeometry x:Name="LeftClipping" Rect="0,0,15,126">
                </RectangleGeometry>
            </Image.Clip>
        </Image>
        <Image Source="/Components\MusicPlayer\Control\Images\chanellVisualizerDiodes.png" Height="126" Stretch="Uniform" Canvas.Left="56" Canvas.Top="25">
            <Image.Clip>
                <RectangleGeometry x:Name="RightClipping" Rect="0,0,15,126">
                </RectangleGeometry>
            </Image.Clip>
        </Image>
    </Canvas>
</UserControl>
